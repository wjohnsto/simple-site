        "@types/morgan": "^1.7.33",
        "@types/node": "^8.0.28",
        "@types/node-sass": "^3.10.32",
        "@types/request": "^2.0.3",
        "@types/uglify-js": "^2.6.29",
        "autoprefixer": "^7.1.4",
        "body-parser": "^1.17.2",
        "bootstrap": "^4.0.0-beta",
        "browser-sync": "^2.18.13",
        "clean-css": "^4.1.9",
        "compression": "^1.7.0",
        "console-stamp": "^0.2.5",
        "exit": "^0.1.2",
